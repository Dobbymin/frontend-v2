{
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^react",
        "^next",
        "<THIRD_PARTY_MODULES>",

        "^~/store/(.*)$",
        "^~/schema/(.*)$",
        "^~/actions/(.*)$",
        "^~/hook/(.*)$",
        "^~/lib/(.*)$",
        "^~/components/ui/(.*)$",
        "^~/components/(.*)$",

        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}